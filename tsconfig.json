{
  "compilerOptions": {
    "baseUrl": ".",                       
    "paths": {
      "src/*": ["./src/*"]
    },                        
    "rootDir": "./src",                    
    "outDir": "./dist",                    
    "module": "commonjs",                  
    "target": "es2020",                    
    "moduleResolution": "node",            
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,         
    "strict": true,                        
    "skipLibCheck": true,                  
    "sourceMap": true,                     
    "esModuleInterop": true,               
    "forceConsistentCasingInFileNames": true, 
    "resolveJsonModule": true,             
    "lib": ["es2020"]                      
  },
  "include": ["src/**/*", "src/__tests__/authRoutes.spec.js", "src/__tests__/authService.spec.js", "src/__tests__/errorHandler.spec.js"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
